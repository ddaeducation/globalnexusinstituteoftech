---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Projects">
  <!-- Projects Header -->
  <section class="pt-24 pb-16 bg-primary">
    <div class="container mx-auto px-4 text-white">
      <h1 class="text-4xl font-bold mb-6 text-center">Projects & Innovation</h1>
      <p class="text-xl text-center max-w-3xl mx-auto">
        Delivering innovative solutions and transformative projects that create real-world impact across various industries.
      </p>
    </div>
  </section>

  <!-- Project Areas -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Project Areas</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">AI Solutions</h3>
          <p class="text-gray-600">Custom AI implementations for business optimization and automation.</p>
          <ul class="mt-4 space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Chatbot Development
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Image Recognition Systems
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Process Automation
            </li>
          </ul>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Data Analytics</h3>
          <p class="text-gray-600">End-to-end data analytics solutions for business intelligence.</p>
          <ul class="mt-4 space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Business Intelligence Dashboards
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Predictive Analytics Tools
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Data Visualization Platforms
            </li>
          </ul>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Digital Transformation</h3>
          <p class="text-gray-600">Comprehensive digital solutions for business modernization.</p>
          <ul class="mt-4 space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Process Digitization
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Cloud Migration
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Digital Workflow Solutions
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Collaborations -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Project Partners</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Technology Partners</h3>
          <ul class="space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Rwanda Management Institute
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              NCC UK Technology Hub
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              East African Tech Alliance
            </li>
          </ul>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Industry Partners</h3>
          <ul class="space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Tech Innovation Labs
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Digital Solutions Corp
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              African Data Center
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>