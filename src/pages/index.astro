---
import Layout from "../layouts/Layout.astro";
import { useEffect, useState } from "react";
---

<Layout title="Welcome">
  <!-- Hero Section -->
  <section
    class="relative h-screen flex items-center justify-center bg-[url('/images/back2.jpeg')] bg-cover bg-center"
  >
    <div class="absolute inset-0 bg-red-10"></div>
    <div class="relative z-10 text-center px-4">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">
        Global Nexus Institute
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-black">
        Connect with future tech leaders
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/programs"
          class="bg-white text-primary px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition"
        >
          Explore Programs
        </a>
        <a
          href="/admissions"
          class="bg-transparent border-2 border-white text-white px-8 py-3 rounded-full font-semibold hover:bg-white hover:text-primary transition"
        >
          Apply Now
        </a>
      </div>
    </div>
  </section>

  <!-- Pop-up Call for Application -->
  <div
    id="popup"
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
  >
    <div class="bg-white p-6 rounded-lg shadow-sm text-center relative">
      <h2 class="text-xl text-gray-900 mb-4">Call For Application!</h2>
      <p class="text-gray-600 mb-2">Don't miss this opportunity to join us!</p>
      <p class="text-red-600 font-semibold mb-4">Deadline: February 21, 2025</p>
      <a
        href="/admissions"
        class="bg-primary text-white px-4 py-3 rounded-full font-semibold hover:bg-primary-dark transition"
      >
        Python Data Analytics
      </a>
      <a
        href="https://www.linkedin.com/feed/update/urn:li:activity:7292964335696375809"
        target="_blank"
        rel="noopener noreferrer"
        class="block mt-2 text-primary font-semibold hover:underline"
      >
        Read More
      </a>
      <!-- Close button placed in the middle bottom -->
      <button
        onclick="document.getElementById('popup').style.display='none'"
        class="absolute top-4 left-3.8 transform -translate-x-1/2 text-gray-500 hover:text-black-700"
      >
        X
      </button>
    </div>
  </div>

  <script>
    setTimeout(() => {
      document.getElementById("popup").style.display = "flex";
    }, 2000);
  </script>

  <!-- Quick Links -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <a href="/admissions" class="group">
          <div class="p-6 bg-gray-50 rounded-lg hover:shadow-lg transition">
            <h3 class="text-xl font-semibold text-primary mb-2">Apply Now</h3>
            <p class="text-gray-600">Start your journey with Global Nexus</p>
          </div>
        </a>
        <a href="/admissions" class="group">
          <div class="p-6 bg-gray-50 rounded-lg hover:shadow-lg transition">
            <h3 class="text-xl font-semibold text-primary mb-2">
              Scholarships
            </h3>
            <p class="text-gray-600">Explore funding opportunities</p>
          </div>
        </a>
        <a href="/programs" class="group">
          <div class="p-6 bg-gray-50 rounded-lg hover:shadow-lg transition">
            <h3 class="text-xl font-semibold text-primary mb-2">
              Learning Portal
            </h3>
            <p class="text-gray-600">Access your online courses</p>
          </div>
        </a>
        <a href="/contact" class="group">
          <div class="p-6 bg-gray-50 rounded-lg hover:shadow-lg transition">
            <h3 class="text-xl font-semibold text-primary mb-2">Contact Us</h3>
            <p class="text-gray-600">Get in touch with our team</p>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>
